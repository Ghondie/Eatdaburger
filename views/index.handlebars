<h1>burgers!</h1>

<h2>burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{name}}

        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
            DEVOUR
        </button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{name}}

        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
            EAT AGAIN?
        </button>


    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
